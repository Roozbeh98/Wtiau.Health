@model IEnumerable<Wtiau.Health.Web.Models.ViewModels.Model_FormList>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Form_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Form_QuestionCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Form_CreateDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Form_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Form_QuestionCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Form_CreateDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
