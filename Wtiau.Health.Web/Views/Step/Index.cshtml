@model IEnumerable<Wtiau.Health.Web.Models.ViewModels.Model_FormStepList>

@{
    ViewBag.Title = "لیست مراحل";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="panel panel-body panel-default  navigation">

    <div class="pull-left">
        <h4 class="navigation-title"><b>لیست مراحل</b></h4>
    </div>

    <div class="pull-right">
        <a href="#" onclick="Create()"><i class="glyphicon glyphicon-plus navigation-btn-icon"></i></a>
    </div>

</div>

<div class="panel panel-default">

    <div class="panel-body table-body" style="overflow-x:auto;">

        <table id="DateTable" class="table  table-bordered table-striped table-secondary" style="width:100%;">

            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Name)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Display)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.QuestionCount)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Order)</th>
                    <th scope="col" data-orderable="false">کنترل</th>
                </tr>
            </thead>

            <tbody>
                @{
                    int x = 0;
                }

                @foreach (var item in Model)
                {
                    x++;

                    <tr>
                        <td scope="row">@x</td>
                        <td scope="row">
                            <span> @Html.DisplayFor(modelItem => item.Name) </span>
                        </td>
                        <td scope="row">
                            <span> @Html.DisplayFor(modelItem => item.Display) </span>
                        </td>
                        <td scope="row">
                            <span> @Html.DisplayFor(modelItem => item.QuestionCount) </span>
                        </td>
                        <td scope="row">
                            <span> @Html.DisplayFor(modelItem => item.Order) </span>
                        </td>

                        <td scope="row">
                            <a class="btn btn-info btn-sm glyphicon glyphicon-list" href="@Url.Action("Index", "Question", new { id = item.ID })"> </a>
                            <a class="btn btn-primary btn-sm glyphicon glyphicon-list" href="@Url.Action("Index", "Step", new { id = item.ID })"> </a>
                            <a class="btn btn-success btn-sm glyphicon glyphicon-plus" onclick="AddStep(@item.ID)"> </a>
                            <a class="btn btn-danger btn-sm glyphicon glyphicon-trash" onclick="Delete(@item.ID)"> </a>
                        </td>
                    </tr>
                }

            </tbody>

        </table>

    </div>

</div>


@Html.Partial("_Modal")

@section Modal {
    <script>

        function Delete(id) {
            $.ajax({
                url: "/Dashboard/Exam/Delete/" + id,
                type: "Get",
                data: {}
            }).done(function (result) {
                $('#myModal').modal('show');
                $('#myModalLabel').html('حدف آزمون');
                $('#myModalBody').html(result);
            });
        }

        function Create() {
            $.ajax({
                url: "/Form/CreateForm",
                type: "Get",
                data: {}
            }).done(function (result) {
                $('#myModal').modal('show');
                $('#myModalLabel').html('افزودن فرم');
                $('#myModalBody').html(result);
            });
        }

        function AddStep(id) {
            $.ajax({
                url: "/Form/AddStep/" + id,
                type: "Get",
                data: {}
            }).done(function (result) {
                $('#myModal').modal('show');
                $('#myModalLabel').html('افزودن مرحله');
                $('#myModalBody').html(result);
            });
        }

    </script>
}